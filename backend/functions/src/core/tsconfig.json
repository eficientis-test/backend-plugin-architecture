{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./lib"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "lib", "dist"]
}
